<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mm.member">
	<insert id="insertJoin" parameterType="com.mm.member.model.MemberDTO">
		insert into member values(
									member_user_idx.nextval,
									#{user_id},
									'머뭄',
									'회원',
									#{user_pwd},
									#{user_name},
									#{user_pcode},
									#{user_addr},
									#{addr_detail},
									#{user_tel},
									sysdate,
									'Y',
									'Y',
									''
									)
	</insert>
	<select id="login" parameterType="String" resultType="com.mm.member.model.MemberDTO">
		select * from member where user_id = #{user_id }	
	</select>
	<select id="getUserInfo" parameterType="String" resultType="com.mm.member.model.MemberDTO">
		select * from member where user_id = #{user_id }
	</select>
</mapper> 
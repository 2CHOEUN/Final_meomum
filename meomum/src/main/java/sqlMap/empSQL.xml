<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.mm.emp">
  	<insert id="empInsert" parameterType="com.mm.emp.model.EmpDTO">
  		insert into employee values(employee_idx.nextval, #{name},#{email},#{dept})
  	</insert>
  	
  	<delete id="empDel" parameterType="int">
  		delete from employee where idx=#{idx}
  	</delete>
  	
  	<select id="empAllList" resultType="com.mm.emp.model.EmpDTO">
  		select * from employee order by idx desc
  	</select>
  	
  	<select id="empSearch" parameterType="int" resultType="com.mm.emp.model.EmpDTO">
  		select * from employee where idx=#{idx}
  	</select>
  	
  	<update id="empUpdate" parameterType="com.mm.emp.model.EmpDTO" >
  		update employee set name=#{name},email=#{email},dept=#{dept} where idx=#{idx}
  	</update>
  </mapper>
  
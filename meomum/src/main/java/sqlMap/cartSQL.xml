<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.mm.cart">
  	<insert id="cartInsert" parameterType="com.mm.cart.model.CartDTO">
		insert into cart values(
		cart_num_idx.nextval, 
		#{pro_idx},
		#{user_idx},
		#{cart_amount}
		)
	</insert>
	
	<select id="cartCheck" parameterType="integer" resultType="com.mm.pro.model.ProDTO">
	select * from cart
	where pro_idx=#{pro_idx}
	</select>
	
	<update id="cartMoreInsert" parameterType="integer">
	update
	</update>
	
  </mapper>